{
    "$jsonSchema": {
        "bsonType": "object",
        "required": ["serviceKey","name","authType","status","createdAt"],
        "properties": {
            "serviceKey": { "bsonType": "string" },
            "name": { "bsonType": "string" },
            "authType": { "bsonType": "string", "enum": ["OAuth2","API_KEY","Bearer","Basic","Custom"] },
            "vaultRef": { "bsonType": ["string","null"] },
            "endpointKey": { "bsonType": ["string","null"] },
            "endpointPath": { "bsonType": ["string","null"] },
            "method": { "bsonType": ["string","null"], "enum": ["GET","POST","PUT","PATCH","DELETE"] },
            "status": { "bsonType": "string", "enum": ["active","inactive","testing"] },
            "createdAt": { "bsonType": "date" },
            "updatedAt": { "bsonType": ["date","null"] }
        }
    }
}
