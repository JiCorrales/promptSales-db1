# PromptContent – Entorno local (copiar como .env y ajustar valores)

# Servidor
PORT=8080
API_KEY=devlocal
NODE_ENV=development

# MongoDB (opcional; si no se configura, el servidor usa almacenamiento local de archivos)
MONGODB_URI=mongodb://localhost:27017/promptContent
MONGODB_DB_NAME=promptContent

# Postgres + pgvector (opcional pero recomendado para búsqueda semántica)
PGVECTOR_DSN=postgres://postgres:postgres@localhost:5432/promptcontent
PGVECTOR_TABLE=content_embeddings
PGVECTOR_DIM=128

# Configuración de contenido por defecto
PC_DEFAULT_CHANNELS=instagram,tiktok
PC_HASHTAG_COUNT=10
PC_MOODBOARD_MAX=5
PC_KEYWORD_MAX=6
# PC_MESSAGE_TEMPLATES puede ser JSON compacto; ejemplo:
# PC_MESSAGE_TEMPLATES={"Descubrimiento":"Conoce {name}: {offer}","Consideracion":"Beneficios clave para {name}","Conversion":"Actua ahora: {cta}"}

# Integración externa: Spotify (Client Credentials OAuth2)
# Obtén tus credenciales en https://developer.spotify.com/dashboard/
SPOTIFY_CLIENT_ID=
SPOTIFY_CLIENT_SECRET=

# Utilidad para pruebas: evita que el servidor HTTP haga listen durante tests
# Establécelo en 1 cuando corras los tests locales
PROMPTCONTENT_NO_LISTEN=0
